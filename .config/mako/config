# General Config
max-history=5
sort=-priority
layer=top
anchor=top-right

# Mouse Button Actions
on-button-left=invoke-default-action
on-button-middle=dismiss-all
on-button-right=dismiss

# Notification Sound
on-notify=exec mpv --no-video --volume=100 /usr/share/sounds/freedesktop/stereo/message.oga

# Font Config
font=JetBrainsMono Nerd Font 10

# Color Config
text-color=#ffffff
background-color=#242322

# Border Config
border-color=#b8b5b2
border-size=1
border-radius=8

# Icon Config
icons=1
max-icon-size=64
icon-path="/usr/share/icons/Papirus/"
icon-location=left
